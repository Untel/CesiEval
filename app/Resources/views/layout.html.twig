<html lang="fr">
    <head>
        <title>{% block title %}CESI{% endblock %}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <body>

        <div id="messageBox" style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width: 400px">
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">
                    <b>Echec !</b>
                    <p>{{message}}</p>
                </div>
            {% endfor %}

            {% for message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    <b>Succ√®s !</b>
                    <p>{{message}}</p>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-3">
            <nav style="padding: 10px;" class="list-group">

                <a href="{{ path('cesi_home_training_render', { 'page' : 0 } ) }}" 
                    class="list-group-item
                        {% if (app.request.attributes.get('_route') == 'cesi_home_training_render') and (app.request.attributes.get('_route_params')['page'] == 0) %}
                            active
                        {% endif %}">
                    Acceuil
                </a>

                <a  href="{{ path('cesi_new_training_render') }}" 
                    class="list-group-item
                        {% 
                            if app.request.attributes.get('_route') == 'cesi_new_training_render'
                        %} active {% endif %}">
                    Ajouter une formation
                </a>

                <a  href="{{ path('cesi_edit_training_render', { 'id' : 1 } ) }}" 
                    class="list-group-item
                        {% 
                            if (app.request.attributes.get('_route') == 'cesi_edit_training_render') and (app.request.attributes.get('_route_params')['id'] == 1)
                        %} active {% endif %}">
                    Formation 1
                </a>
    
                <a  href="{{ path('cesi_edit_training_render', { 'id' : 2 } ) }}" 
                    class="list-group-item
                        {% 
                            if (app.request.attributes.get('_route') == 'cesi_edit_training_render') and (app.request.attributes.get('_route_params')['id'] == 2)
                        %} active {% endif %}">
                    Formation 2
                </a>
            
                <a  href="{{ path('cesi_edit_training_render', { 'id' : 3 } ) }}" 
                    class="list-group-item
                        {% 
                            if (app.request.attributes.get('_route') == 'cesi_edit_training_render') and (app.request.attributes.get('_route_params')['id'] == 3)
                        %} active {% endif %}">
                    Formation 3
                </a>

            </nav>
        </div>

        <section class="col-md-9">

            {% block body %}
            {% endblock %}
        
        </section>

        <script>
            setTimeout(function() {
                document.getElementById('messageBox').style.display = 'none';
            }, 5000);
        </script>
    </body>
</html>